<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-7dp" >

	<RelativeLayout
	    android:id="@+id/login_out_profile_layout"
	    style="@style/myProfileLayout"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="0dp"
	    android:background="@drawable/background" >

        <Button
            android:id="@+id/button_logout"
            style="?android:attr/buttonBarStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="false"
            android:layout_marginRight="0dp"
            android:background="@null"
            android:text="@string/ui_logout" />

        <TextView
            android:id="@+id/user_name_tV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_logout"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:text="用户姓名"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/profile_image" />

        <TextView
            android:id="@+id/user_info_tV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/user_name_tV"
            android:layout_below="@+id/user_name_tV"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="5dp"
            android:text="知名企业家，万贯资产"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/button_profile"
            android:layout_width="112dp"
            android:layout_height="30dp"
            android:layout_below="@+id/user_info_tV"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/imageView2"
            android:src="@drawable/button_detail" />

    </RelativeLayout>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/login_out_profile_layout"
	    android:background="@color/lightgray" >

	    <TableRow
	        android:id="@+id/amount_tR"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="15dp"
	        android:background="@drawable/table_row1"
	        android:gravity="center_vertical|center_horizontal" >

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="总资产  " />

	        <TextView
	            android:id="@+id/asset_tV"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="$ 2，000，000.00 " />

	        <TextView
	            android:id="@+id/leaderboard_tV"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:text="@string/ui_leaderboard"
	            android:textColor="@color/text_dark_Red" />

	    </TableRow>

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="150dp"
	        android:layout_below="@+id/amount_tR"
	        android:layout_centerHorizontal="true"
	        android:layout_marginLeft="28dp"
	        android:layout_marginRight="28dp"
	        android:layout_marginTop="30dp"
	        android:background="@drawable/table_row3"
	        android:orientation="vertical" >
	        
	        <Button
	            android:id="@+id/button_shared_history"
	            style="?android:attr/buttonBarStyle"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_below="@+id/amount_tR"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="10dp"
	            android:layout_weight="1"
	            android:text="转发广告记录" />

		    <Button
		        android:id="@+id/button_withdraw_history"
		        style="?android:attr/buttonBarStyle"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_below="@+id/button_shared_history"
		        android:layout_centerHorizontal="true"
		        android:layout_weight="1"
		        android:text="我的提现记录" />
	
		    <Button
		        android:id="@+id/button_withdraw_request"
		        style="?android:attr/buttonBarStyle"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_below="@+id/button_withdraw_history"
		        android:layout_centerHorizontal="true"
		        android:layout_marginBottom="10dp"
		        android:layout_weight="1"
		        android:text="提现请求" />

	    </LinearLayout>
	    
	</RelativeLayout>

</RelativeLayout>
